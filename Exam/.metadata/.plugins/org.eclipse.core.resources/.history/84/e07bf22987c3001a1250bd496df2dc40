package filesplitter.gui;

import java.awt.*;
import java.io.File;
import java.util.ArrayList;
import java.util.Vector;

import javax.swing.*;
import javax.swing.event.ChangeEvent;
import javax.swing.event.ChangeListener;

import filesplitter.Main;
import filesplitter.fileType.SplitFile;
import filesplitter.gui.panels.*;

/**
 * A class representing a custom JFrame.
 */
public class SplitterFrame extends JFrame implements ChangeListener {
	private JTabbedPane fileSplitterPanel;
	private SplitPanel sPanel;
	private MergePanel mPanel;
	
	
	public static ArrayList<SplitFile> splitFiles;
	public static Vector<File> parts;
	
	/**
	 * Sets the title of the JFrame and adds panels to it.
	 * @param title JFrame title
	 */
	public SplitterFrame(String title) {
		super(title);
		
		SplitterFrame.splitFiles = new ArrayList<SplitFile>();
	
		fileSplitterPanel = new JTabbedPane();
		sPanel = new SplitPanel();
		mPanel = new MergePanel();
		
		fileSplitterPanel.addTab("Dividi file", sPanel);
		fileSplitterPanel.addTab("Ricomponi file", mPanel);
		
		fileSplitterPanel.addChangeListener(this);
		add(fileSplitterPanel);	
	}

	/**
	 * Method that resizes the JFrame according to the selected panel.
	 */
	@Override
	public void stateChanged(ChangeEvent e) {
		
		switch(fileSplitterPanel.getSelectedIndex()) {
		case 0: {
			fileSplitterPanel.setPreferredSize(Main.defaultFrameDimension);
			pack();
			break;
		}
		case 1: {
			fileSplitterPanel.setPreferredSize(new Dimension(Main.defaultFrameDimension.width, 200));
			
			pack();
			break;
		}
		}
	}
	
	
}
